
@{
    Layout = null;
}
@model Domain.ViewModels.Shared.PagingViewModel

<ul class="pagination mt-5px">
    @if (Model.StartPage < Model.Page)
    {
        <li><a class="cursor-pointer" onclick="OnClick(@(Model.Page - 1))">«</a></li>
    }
    @for (int i = Model.StartPage; i <= Model.EndPage; i++)
    {
        if (Model.Page == i)
        {
            <li class="active"><a class="cursor-pointer">@i</a></li>
        }
        else
        {
            <li><a class="cursor-pointer" onclick="OnClick(@i)">@i</a></li>
        }
    }
    @if (Model.EndPage > Model.Page)
    {
        <li><a class="cursor-pointer" onclick="OnClick(@(Model.Page + 1))">»</a></li>
    }
</ul>


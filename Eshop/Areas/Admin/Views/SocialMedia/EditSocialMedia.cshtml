@using Domain.ViewModels.SocialMedia
@using Domain.Models.Enums
@model EditSocialMediaViewModel
@{
    ViewData["Title"] = "ویرایش شبکه اجتماعی";
    
}

<div style="margin-top: 110px" class="col-lg-12 col-sm-6 col-xs-12">
    <form method="post" asp-controller="SocialMedia" asp-action="EditSocialMedia">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-pink">
                <span class="widget-caption">افزودن شبکه اجتماعی</span>
            </div>
            <div class="widget-body">
                <div id="horizontal-form">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-6">
                            <select asp-for="Platform" asp-items="@Html.GetEnumSelectList(typeof(SocialMediaPlatform))" placeholder="پلفترم" class="form-control"></select>
                            <div class="horizontal-space"></div>
                            <span class="danger" asp-validation-for="Platform"></span>
                        </div>
                        <div class="col-md-6">
                            <input type="text" asp-for="Url" placeholder="لینک" class="form-control">
                            <div class="horizontal-space"></div>
                        </div>
                    </div>
                    <div class="horizontal-space"></div>

                    <button type="submit" class="btn btn-palegreen btn-lg shiny">ثبت</button>
                </div>

            </div>

        </div>
    </form>
</div>
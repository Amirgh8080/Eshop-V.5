@using Application.Security
@using Domain.ViewModels.SocialMedia
@using Eshop.Common
@model FilterSocialMediaForAdminViewModel
@{
    ViewData["Title"] = "رسانه های اجتماعی";
}

<div style="margin-top: 110px" class="col-xs-12 col-md-12">
    <div class="well with-header  with-footer">
        <div class="header bg-darkorange">
            لیست رسانه های اجتماعی
           
        </div>
         <a style="margin-bottom: 10px" class="btn btn-primary shiny">
                <i class="fa fa-plus"></i>
                افزودن
            </a>
        <table class="table table-hover table-striped table-bordered table-condensed">
           
            <thead>

                <tr>
                    <th>
                        پلتفرم
                    </th>
                    <th>
                        لینک
                    </th>
                    <th>
                        دستورات
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var social in Model.Entities)
                {
                    <tr>
                        <td>
                            @social.PlatForm.GetEnumDisPlayName()
                        </td>
                        <td>
                            @social.Url
                        </td>
                        <td>
                            <Authrize permission-id="Permissions.DeleteLink">

                                <a href="/Admin/DeleteSocialMedia/@social.Id" class="btn btn-danger shiny">حذف لینک</a>
                            </Authrize>
                            <Authrize permission-id="Permissions.EditLink">

                            <a href="/Admin/EditSocialMedia/@social.Id" class="btn btn-azure shiny">ویرایش لینک</a>
                            </Authrize>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>


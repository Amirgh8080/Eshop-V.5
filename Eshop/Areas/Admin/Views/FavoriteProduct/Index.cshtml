@using Application.Convertor
@model Domain.ViewModels.Product.FavoriteProductViewModel

<div style="margin: 20px" class="row ">
    <form id="indexForm">
        <input type="hidden" asp-for="Page" id="page" />
        <div class="col-xs-12 col-md-12">
            <div style="margin-top: 80px" class="widget">
                <div class="widget-header bordered-bottom bordered-yellow">
                    <span class="widget-caption">لیست کالا های مورد علاقه کاربر</span>
                    <div class="widget-buttons">
                        <a href="#" data-toggle="maximize">
                            <i class="fa fa-expand"></i>
                        </a>
                        <a href="#" data-toggle="collapse">
                            <i class="fa fa-minus"></i>
                        </a>
                        <a href="#" data-toggle="dispose">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="widget-body no-padding">
                    <div id="searchable_wrapper" class="dataTables_wrapper form-inline">


                        <div id="searchable_filter" class="dataTables_filter">
                            <label>
                                <input type="search" asp-for="ProductTitle" class="form-control input-lg" placeholder="جست و جو" aria-controls="searchable">
                            </label>
                            <input type="submit" class="btn btn-darkorange btn-lg shiny btn-label fa fa-search" value="جست و جو">


                        </div>

                      
                        <table style="margin-left: 20px" class="table table-bordered table-hover table-striped dataTable" id="searchable" role="grid" aria-describedby="searchable_info">
                            <thead class="bordered-darkorange">
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 233px;">عکس کالا</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Browser: activate to sort column descending" style="width: 233px;">نام کالا</th>
                                    <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 233px;">قیمت </th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Browser: activate to sort column descending" style="width: 233px;">تاریخ</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Entities)
                                {

                                    <tr role="row" class="odd">
                                        <td class=" sorting_1"><img class="thumbnail" src="/images/thumb/@item.Product.ProductGalleries.FirstOrDefault(c=>c.IsDefault).ImageName"/></td>
                                        <td class="sorting_1">@item.Product.Title</td>
                                        <td class=" ">@item.Product.Price</td>
                                        <td class=" ">@item.CreatDate.ToShamsi()</td>
                                       

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <div class="row DTTTFooter">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="searchable_info" role="status" aria-live="polite">Showing 1 to 10 of 10 entries</div>
                            </div>
                            <partial name="_Paging" model="@Model.GetCurrentPaging()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section Section
{
    <script>
    function OnClick(pageId) {
    $("#page").val(pageId)
    $("#indexForm").submit();

    }
</script>
}

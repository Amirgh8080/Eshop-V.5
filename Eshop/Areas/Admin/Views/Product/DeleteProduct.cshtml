@model Domain.ViewModels.Product.EditProductViewModel
@{
    ViewData["Title"] = "DeleteProduct";
}

<div style="margin-top: 110px" class="col-lg-12 col-sm-12 col-xs-12">
    <form method="post" asp-controller="Product" asp-action="DeleteProduct">
    <div class="widget">
        <input type="hidden" asp-for="Id"/>
        <div class="widget-header bg-gold">
            <span class="widget-caption"> کالا:@Model.Title</span>
            <div class="widget-buttons">
                <a href="#" data-toggle="config">
                    <i class="fa fa-cog"></i>
                </a>
                <a href="#" data-toggle="maximize">
                    <i class="fa fa-expand"></i>
                </a>
                <a href="#" data-toggle="collapse">
                    <i class="fa fa-minus"></i>
                </a>
                <a href="#" data-toggle="dispose">
                    <i class="fa fa-times"></i>
                </a>
            </div><!--Widget Buttons-->
        </div><!--Widget Header-->
        <div class="widget-body bg-lightred">

            <p>توضیح کوتاه محصول:@Model.ShortDescription</p>
        </div><!--Widget Body-->




        <div class="widget-body bg-lightred">
            <p>آیا از حذف این کالا اطمینان دارید?</p>
            <button class="btn btn-palegreen" id="bootbox-regular">بازگشت</button>
            <button type="submit" class="btn btn-darkorange" id="bootbox-regular">حذف</button>
        </div>
        <!--Widget Body-->
    </div><!--Widget-->
    </form>
</div>
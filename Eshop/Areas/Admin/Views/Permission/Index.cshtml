@using Eshop.Common
@model List<Domain.Models.Role.Role>

<div style="margin-top: 110px" class="col-xs-12 col-md-12">
    <div class="well with-header  with-footer">
        <div class="header bg-darkorange">
            لیست نقش

        </div>
        <a style="margin-bottom: 10px" class="btn btn-primary shiny">
            <i class="fa fa-plus"></i>
            افزودن
        </a>
        <table class="table table-hover table-striped table-bordered table-condensed">

            <thead>

                <tr>
                    <th>
                        نام نقش
                    </th>

                    <th>
                        دستورات
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.RoleTitle
                        </td>

                        <td>
                            <Authrize permission-id="@Permissions.DeleteRole">
                                <a href="/Admin/DeleteRole/@item.Id" class="btn btn-danger shiny">حذف نقش</a>
                            </Authrize>
                            <Authrize permission-id="@Permissions.EditRole">
                                <a href="/Admin/EditRole/@item.Id" class="btn btn-azure shiny">ویرایش نقش</a>
                            </Authrize>

                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>
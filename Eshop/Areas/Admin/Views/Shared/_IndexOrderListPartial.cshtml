@model Domain.ViewModels.Order.OrderListPartialViewModel

<div class="col-xs-12 col-md-12">
    <div class="well with-header  with-footer">
        <div class="header bg-darkorange">
            سفارشات
        </div>
        <table class="table table-hover table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        کد پیگیری
                    </th>
                    <th>
                        ایمیل کاربر
                    </th>
                    <th>
                        تعداد سفارش
                    </th>
                    <th>
                        قیمت کل
                    </th>
                </tr>
            </thead>
            <tbody>
               @foreach (var order in Model.Orders)
               {
                   <tr>
                       <td>
                           @order.TrackingNumber
                       </td>
                       <td>
                           @order.User.Email
                       </td>
                       <td>
                           @order.OrderDetails.Sum(o=>o.Count)
                       </td>
                       <td>
                           @order.OrderDetails.Sum(o=>o.Count*o.Price)
                       </td>
                   </tr>
               }
             
            </tbody>
        </table>

       
    </div>
</div>

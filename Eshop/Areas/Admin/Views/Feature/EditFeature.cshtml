@using Domain.Models.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Domain.ViewModels.Product.EditFeatureViewModel
@{
    ViewData["Title"] = "EditFeature";
}


<div style="margin-top: 110px" class="col-lg-12 col-sm-12 col-xs-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-blue">
            <span class="widget-caption">ویژگی جدید</span>
        </div>
        <div class="widget-body">
            <div>
                <form method="post" asp-controller="Feature" asp-action="EditFeature"  role="form">
                      <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label for="exampleInputEmail1">عنوان</label>
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail1" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">نوع</label>
                        <select class="form-control" asp-for="Type" asp-items="Html.GetEnumSelectList(typeof(FeatureEnums))"></select>
                    </div>
                 
                    <button type="submit" class="btn btn-blue">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>


